<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lowcode.workflow.web.flow.mapper.FlowMapper">


    <insert id="insert">

        insert into eda_flow(id,name,description,username,status,create_date,update_date)
        values (#{id}, #{name}, #{description}, #{username}, #{status}, #{createDate}, #{updateDate})


    </insert>


    <update id="update">

        update eda_flow
        <set>
            <if test="name != null">name = #{name}</if>
            <if test="description != null">description = #{description}</if>
            update_date = #{updateDate}
        </set>
    </update>


    <delete id="deleteByIds">
        delete from eda_flow where id in
        <foreach collection="ids" separator="," open="(" close=")" item="id">#{id}</foreach>
    </delete>


    <select id="findByRequest" resultType="com.lowcode.workflow.web.flow.entity.Flow">
        select * from eda_flow
        <where>
            <if test="username != null">
                and username = #{username}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by creat_date desc
    </select>


    <select id="findById" resultType="com.lowcode.workflow.web.flow.entity.Flow">
        select * from eda_flow where id = #{id}
    </select>
</mapper>